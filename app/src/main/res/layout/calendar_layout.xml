<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_cust_calendar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/background">

        <ImageView
            android:id="@+id/Previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_previous"
            android:scaleType="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:text="CurrentDate"
            android:id="@+id/current_Date"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="3"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Next"
            android:src="@drawable/ic_next"
            android:scaleType="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Dom"
            android:background="@color/altGrey1"
            android:paddingTop="@dimen/days_padding"
            android:paddingBottom="@dimen/days_padding"
            android:layout_weight="1"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lun"
            android:background="@color/altGrey2"
            android:paddingTop="@dimen/days_padding"
            android:paddingBottom="@dimen/days_padding"
            android:layout_weight="1"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mar"
            android:background="@color/altGrey1"
            android:paddingTop="@dimen/days_padding"
            android:paddingBottom="@dimen/days_padding"
            android:layout_weight="1"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mer"
            android:background="@color/altGrey2"
            android:paddingTop="@dimen/days_padding"
            android:paddingBottom="@dimen/days_padding"
            android:layout_weight="1"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Gio"
            android:background="@color/altGrey1"
            android:paddingTop="@dimen/days_padding"
            android:paddingBottom="@dimen/days_padding"
            android:layout_weight="1"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ven"
            android:background="@color/altGrey2"
            android:paddingTop="@dimen/days_padding"
            android:paddingBottom="@dimen/days_padding"
            android:layout_weight="1"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sab"
            android:background="@color/altGrey1"
            android:paddingTop="@dimen/days_padding"
            android:paddingBottom="@dimen/days_padding"
            android:layout_weight="1"
            android:textStyle="bold"
            />
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Grid"
        android:numColumns="7"></GridView>

</LinearLayout>
